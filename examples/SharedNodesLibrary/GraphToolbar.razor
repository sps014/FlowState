<div class="toolbar">
    <button class="btn btn-success" @onclick="OnSave">💾 Save Graph</button>
    <button class="btn btn-danger" @onclick="OnClear">🗑️ Clear Graph</button>
    <button class="btn btn-info" @onclick="OnLoad">📂 Load Graph</button>
    <button class="btn btn-execute" @onclick="OnExecute">▶️ Execute Graph</button>
    <button class="btn btn-secondary" @onclick="OnToggleReadOnly">@(IsReadOnly ? "🔓 Enable Editing" : "🔒 Read-Only")</button>
    <button class="btn btn-secondary" @onclick="OnUndo">↶ Undo</button>
    <button class="btn btn-secondary" @onclick="OnRedo">↷ Redo</button>
    
    <!-- Canvas Mode Buttons -->
    <div class="mode-group">
        <button class="btn @(CurrentMode == "Select" ? "btn-mode-active" : "btn-mode")" @onclick="OnSetSelectMode">
            🖱️ Select
        </button>
        <button class="btn @(CurrentMode == "Pan" ? "btn-mode-active" : "btn-mode")" @onclick="OnSetPanMode">
            ✋ Pan
        </button>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnClear { get; set; }
    [Parameter] public EventCallback OnLoad { get; set; }
    [Parameter] public EventCallback OnExecute { get; set; }
    [Parameter] public EventCallback OnToggleReadOnly { get; set; }
    [Parameter] public EventCallback OnUndo { get; set; }
    [Parameter] public EventCallback OnRedo { get; set; }
    [Parameter] public EventCallback OnSetSelectMode { get; set; }
    [Parameter] public EventCallback OnSetPanMode { get; set; }
    [Parameter] public bool IsReadOnly { get; set; }
    [Parameter] public string CurrentMode { get; set; } = "Select";
}

