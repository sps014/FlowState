@using FlowState.Components
@using FlowState.Models
@using SharedNodesLibrary.UnityThemedNodes
@inherits FlowNodeBase

<FlowNode>
    <div class="title-container">
        <div class="title">ðŸŽ¨ Ocean Colors</div>
    </div>
    <div class="body">
        <div class="color-group">
            <label>Surface Color</label>
            <input type="color" @bind="SurfaceColor" @bind:event="oninput" @onchange="OnColorChanged" class="color-picker" draggable="false" />
        </div>
        
        <div class="color-group">
            <label>Deep Color</label>
            <input type="color" @bind="DeepColor" @bind:event="oninput" @onchange="OnColorChanged" class="color-picker" draggable="false" />
        </div>
        
        <div class="color-group">
            <label>Foam Color</label>
            <input type="color" @bind="FoamColor" @bind:event="oninput" @onchange="OnColorChanged" class="color-picker" draggable="false" />
        </div>
        
        <div class="gradient-preview" style="background: linear-gradient(to bottom, @SurfaceColor, @DeepColor);"></div>
        
        <div class="parameter-group">
            <label>Opacity: @Opacity.ToString("F2")</label>
            <input type="range" min="0.1" max="1" step="0.1" @bind="Opacity" @bind:event="oninput" @onchange="OnColorChanged" class="wave-slider" draggable="false" />
        </div>
        
        <UnitySocket Name="GradientConfig" Label="Colors" Type="SocketType.Output" T="typeof(GradientConfig)" OuterColor="#E91E63" InnerColor="#F48FB1"/>
    </div>
</FlowNode>

<style>
    .color-group {
        margin: 8px 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .color-group label {
        font-size: 11px;
        color: #aaa;
    }
    
    .color-picker {
        width: 50px;
        height: 30px;
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 4px;
        background: transparent;
        cursor: pointer;
        pointer-events: auto;
    }
    
    .gradient-preview {
        height: 40px;
        border-radius: 4px;
        margin: 8px 0;
        border: 1px solid rgba(255,255,255,0.1);
    }
    
    .parameter-group {
        margin: 8px 0;
    }
    
    .parameter-group label {
        display: block;
        font-size: 11px;
        color: #aaa;
        margin-bottom: 4px;
    }
    
    .wave-slider {
        width: 100%;
        height: 4px;
        background: rgba(255,255,255,0.1);
        outline: none;
        border-radius: 2px;
        pointer-events: auto;
        cursor: pointer;
    }
    
    .wave-slider::-webkit-slider-thumb {
        appearance: none;
        width: 14px;
        height: 14px;
        background: #E91E63;
        border-radius: 50%;
        cursor: pointer;
    }
    
    .wave-slider::-moz-range-thumb {
        width: 14px;
        height: 14px;
        background: #E91E63;
        border-radius: 50%;
        cursor: pointer;
        border: none;
    }
</style>

