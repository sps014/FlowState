<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
	<LangVersion>14.0</LangVersion>
    
    <!-- NuGet Package Metadata -->
    <PackageId>FlowState</PackageId>
    <Title>FlowState</Title>
    <Authors>sps014</Authors>
    <Description>A modern, high-performance node-based visual programming library for Blazor applications. Build interactive flow-based editors with custom nodes, real-time execution, and a beautiful theme UI.</Description>
    <PackageTags>blazor;node-editor;visual-programming;flow-graph;node-graph;blazor-component</PackageTags>
    <PackageProjectUrl>https://github.com/sps014/FlowState</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sps014/FlowState</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>Copyright Â© 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="9.0.*" />
  </ItemGroup>

</Project>
